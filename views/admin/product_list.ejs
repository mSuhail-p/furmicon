                    <script>
                        // Get all elements with the class nameofprd
                        let nameElements = document.getElementsByClassName('nameofprd');

                        // Loop through each element
                        for (let element of nameElements) {
                            // Check if the length of innerText is greater than 4
                            if (element.innerText.length > 20) {
                                // Get the current text content
                                let name = element.innerText;

                                // Modify the name by inserting <br> after the first 10 characters
                                let modifiedName = name.substring(0, 10) + "<br>" + name.substring(10);

                                // Update the innerHTML of the element with the modified name
                                element.innerHTML = modifiedName;
                            }
                        }
                    </script>


                    <script>

                        function listingProduct(product_id, index) {

                            const button = document.getElementById(`productid_${index}`);

                            fetch(`/admin/blockProduct/${product_id}`, {
                                method: "get",
                                headers: {
                                    'content-type': 'application/json'
                                }
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.is_blocked == 0) {
                                        button.innerHTML = 'Unlist'
                                    } else {
                                        button.innerHTML = 'List'
                                    }
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                });
                        }




