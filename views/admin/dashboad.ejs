                                        <script>
                                            // Initialize data with monthly data as default
                                            let data = <%- JSON.stringify(orderMonth) %>;

                                            // Call createChart initially with monthly data
                                            createChart(data);

                                            function monthly() {
                                                // Update data with monthly data
                                                data = <%- JSON.stringify(orderMonth) %>;
                                                // Recreate the chart with updated data
                                                createChart(data);
                                            }

                                            function yearly() {
                                                // Update data with yearly data
                                                data = <%- JSON.stringify(orderYear) %>;
                                                // Recreate the chart with updated data
                                                createChart(data);
                                            }

                                            function createChart(data) {
                                                const ctx = document.getElementById('mychart').getContext('2d');

                                                // Clear previous chart if it exists
                                                if (window.myChart) {
                                                    window.myChart.destroy();
                                                }

                                                // Determine the type of data (monthly or yearly)
                                                const isMonthlyData = data.length > 0 && data[0].monthName !== undefined;

                                                // Set chart data based on type
                                                const chartData = {
                                                    labels: isMonthlyData ? data.map(item => item.monthName) : data.map(item => item._id.year),
                                                    datasets: [{
                                                        label: '# of Votes',
                                                        data: data.map(item => item.totalIncome),
                                                        borderWidth: 1,
                                                        backgroundColor: 'rgba(0, 181, 23, 0.2)'
                                                        ,

                                                    }]
                                                };

                                                // Create new chart instance
                                                window.myChart = new Chart(ctx, {
                                                    type: 'bar',
                                                    data: chartData,
                                                    options: {
                                                        scales: {
                                                            y: {
                                                                beginAtZero: true
                                                            }
                                                        }
                                                    }
                                                });
                                            }
                                        </script>

